<h1> GPT APP FOR <%= user.username %>



</h1>

<div class="row">
  <div class="col">

    <p>Here is a list of question you asked</p>
    <ul class="list-group">
      <% items.forEach(item=> { %>
        <li class="list-group-item">
          <span class="">
            <% if (item.completed) { %>
              <a href="/todo/uncomplete/<%= item._id %>">
                <i class="bi bi-check-circle-fill"></i>
              </a>
              <% } else {%>
                <a href="/todo/complete/<%= item._id %>">
                  <i class="bi bi-check-circle"></i>
                </a>
                <%} %>
                  <a href="/todo/remove/<%=item._id %>">
                    <i class="bi bi-trash"></i>
                  </a>
          </span>
          <span class="mx-5">
            <%= item.item %>
          </span>
          <span class="badge rounded-pill bg-danger">
            <%= item.priority?item.priority:5 %>
          </span>
          <a href="/todo/edit/<%=item._id %>">
            <i class="bi bi-pencil-square"></i>
          </a>

        </li>
        <br>

        <% }) %>

          <form method="post" action="todo">
            New Question: <input type="text" name="item">
            <br>

            <input type="submit" value="Submit">
          </form>
  </div>
</div>
</div>